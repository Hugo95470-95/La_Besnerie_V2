{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/appProductID.css') }}">
{% endblock %}


{% block title %}Produit - {{ produit.name }}{% endblock %}

{% block body %}
    <h1>{{ produit.name }}</h1>
    <p>{{ produit.description }}</p>
    <p>Prix : {{ produit.price }} </p>
    <p>Catégorie : {{ produit.category }}</p>
    {% if produit.imageMain %}
        <img src="{{ asset('uploads/images/' ~ produit.imageMain) }}" alt="{{ produit.name }}">
    {% endif %}
    {% if produit.imageSupp %}
        <img src="{{ asset('uploads/images/' ~ produit.imageSupp) }}" alt="{{ produit.name }}">
    {% endif %}
    <a href="{{ path('produit') }}">Retour à la liste des produits</a>

    <form method="post" action="{{ path('cart_add', {id: produit.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('add_to_cart' ~ produit.id) }}">
        <button class="btn btn-primary">Ajouter au panier</button>
    </form>
    
